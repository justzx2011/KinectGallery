<Window x:Class="Ryerson.KinectGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Ryerson.KinectGallery"
        Title="Kinect Gallery" 
        Background="#FF333333"
        MinHeight="480" 
        MinWidth="640">
    <Canvas x:Name="canvas">
        <local:MainMenuControl Height="{Binding ElementName=canvas,Path=ActualHeight,Mode=OneWay}" 
                               Width="{Binding ElementName=canvas,Path=ActualWidth,Mode=OneWay}"></local:MainMenuControl>
    </Canvas>
</Window>
